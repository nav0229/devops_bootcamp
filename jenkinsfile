pipeline {
    agent any

    stages {
        stage ('Everything') {
			when {
				anyOf {
					changeRequest target: 'stg';
					changeRequest target: 'uat';
					branch 'stg';
					branch 'uat'
				}
			}
			}
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
