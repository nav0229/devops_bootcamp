pipeline {
    agent any

    stages {
        	stage ("Build") {
			when {
				anyOf {
					changeRequest target: "test";
					changeRequest target: "rel_1.0";
					branch "test";
					branch "rel_1.0"
				}
			}
			stages {
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
